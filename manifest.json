{
    "manifest_version": 2,
    "version": "0.1.0",
    "name": "LiveReload",
    "description": "A better LiveReload extension for Chrome.",
    "author": "Roland Warmerdam",
    "permissions": [
        "tabs",
        "storage"
    ],
    "browser_action": {
        "default_title": "LiveReload",
        "default_icon": {
            "19": "icon-inactive.png"
        }
    },
    "background": {
        "page": "background.html",
        "persistent": false
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"]
        }
    ]
}
